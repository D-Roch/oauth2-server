- attributes("title") = "BackChat OAuth2 Server"
-@ val errors: List[io.backchat.oauth2.model.ValidationError] = Nil

- if (errors.nonEmpty)
  div.alert.alert-error.alert-block
    a.close(data-dismiss="alert") Ã—
    h4.alert-heading Please correct:
    ul#errors
      - errors foreach 
        - error =>
          li.error= error.message
form.form-horizontal(method="post" action="/register")
  fieldset
    legend Register an account
    div.control-group
      label.control-label(for="login") Login:
      div.controls
        input#login(type="input-xlarge" type="text" name="login" placeholder="Login" )
    div.control-group
      label.control-label(for="email") Email:
      div.controls
        input#email(type="input-xlarge" type="text" name="email" placeholder="Email" )
    div.control-group
      label.control-label(for="name") Full name:
      div.controls
        input#name(type="input-xlarge" type="text" name="name" placeholder="Full name" )
    div.control-group
      label.control-label(for="password") Password:
      div.controls
        input#password(type="input-xlarge" type="password" name="password" placeholder="Password" )
    div.control-group
      label.control-label(for="password_confirmation") Password confirmation:
      div.controls
        input#password_confirmation(type="input-xlarge" type="password" name="password_confirmation" placeholder="Password confirmation" )
    div.form-actions
      button.btn.btn-primary(type="submit") Register
      a.btn(href="/login") Log in
